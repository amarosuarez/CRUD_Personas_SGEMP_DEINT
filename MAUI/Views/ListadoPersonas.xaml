<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Views.ListadoPersonas"
             xmlns:vm="clr-namespace:MAUI.ViewModels"
             Title="Listado de Personas"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <vm:clsListadoPersonasVM/>
    </ContentPage.BindingContext>

    <!-- Contenedor principal -->
    <Grid>
        <!-- Listado y contenido principal -->
        <ScrollView>
            <VerticalStackLayout>
                <!-- Mensaje de error -->
                <VerticalStackLayout IsVisible="{Binding ShowError}" Margin="10">
                    <Label Text="{Binding Error}" 
                           TextColor="Red" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />
                </VerticalStackLayout>

                <!-- Listado -->
                <ListView ItemsSource="{Binding ListadoPersonasNombreDept}"
                          SelectedItem="{Binding PersonaSeleccionada}"
                          HasUnevenRows="True"
                          SeparatorVisibility="None"
                          Margin="5"
                          BackgroundColor="#F5F5F5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame Padding="10"
                                       Margin="5"
                                       BorderColor="#E0E0E0"
                                       BackgroundColor="White">
                                    <HorizontalStackLayout Spacing="10">
                                        <Image Source="{Binding Foto}" 
                                               WidthRequest="70" 
                                               HeightRequest="70"
                                               Aspect="AspectFill"
                                               BackgroundColor="#E0E0E0"/>
                                        <VerticalStackLayout>
                                            <Label TextColor="#212121"
                                                   FontSize="Medium"
                                                   FontAttributes="Bold">
                                                <Label.Text>
                                                    <MultiBinding StringFormat="{}{0} {1}">
                                                        <Binding Path="Nombre"/>
                                                        <Binding Path="Apellidos"/>
                                                    </MultiBinding>
                                                </Label.Text>
                                            </Label>
                                            <Label Text="{Binding NombreDept}" 
                                                   FontSize="Small" 
                                                   TextColor="#757575"/>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Action Buttons -->
        <AbsoluteLayout>
            <!-- Botón Editar -->
            <Button Text="✏️"
                    Command="{Binding EditarCommand}"
                    BackgroundColor="Purple"
                    TextColor="White"
                    FontSize="Medium"
                    CornerRadius="25"
                    WidthRequest="50"
                    HeightRequest="50"
                    AbsoluteLayout.LayoutBounds="0.85, 0.8, 50, 50"
                    AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <!-- Botón Añadir -->
            <Button Text="+" 
                    Command="{Binding InsertarCommand}" 
                    BackgroundColor="Green"
                    TextColor="White"
                    FontSize="Large"
                    CornerRadius="25"
                    WidthRequest="50"
                    HeightRequest="50"
                    AbsoluteLayout.LayoutBounds="0.85, 0.9, 50, 50"
                    AbsoluteLayout.LayoutFlags="PositionProportional"/>

            <!-- Botón Eliminar -->
            <Button Text="🗑️"
                    Command="{Binding BorrarCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="Medium"
                    CornerRadius="25"
                    WidthRequest="50"
                    HeightRequest="50"
                    AbsoluteLayout.LayoutBounds="0.85, 0.7, 50, 50"
                    AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>
    </Grid>
</ContentPage>
