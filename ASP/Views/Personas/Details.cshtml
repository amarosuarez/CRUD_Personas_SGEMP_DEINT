@model ASP.Models.clsPersonaNombreDept

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <div class="p-4 bg-light rounded shadow-sm text-center d-flex flex-column align-items-center">

        <div class="text-center mb-3">
            <img src="@Model.Foto" alt="Foto de Perfil" class="rounded-circle" style="width:150px; height:150px; object-fit:cover; border: 2px solid black;">
        </div>

        <h2 class="mt-3 mb-3 text-dark">Información</h2>

        <div class="w-100 d-flex justify-content-center">
            <div class="p-3 rounded shadow-sm text-start" style="max-width: 500px; width: 100%;">
                <div class="mb-2">
                    <strong>Nombre:</strong> @Model.Nombre @Model.Apellidos
                </div>

                <div class="mb-2">
                    <strong>Teléfono:</strong> @Model.Telefono
                </div>

                <div class="mb-2">
                    <strong>Dirección:</strong> @Model.Direccion
                </div>

                <div class="mb-2">
                    <strong>Fecha de Nacimiento:</strong> @Model.FechaNacimiento
                </div>

                <div class="mb-2">
                    <strong>Departamento:</strong> @Model.NombreDept
                </div>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between w-100">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Editar</a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Volver</a>
        </div>

    </div>
</div>
